<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="login-email">Email:</label>
        <input class="form-input" type="text" id="login-email" />
      </div>
      <div class="form-group">
        <label for="login-password">Password:</label>
        <input class="form-input" type="password" id="login-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="signup-username">Username:</label>
        <input class="form-input" type="text" id="signup-username" />
      </div>
      <div class="form-group">
        <label for="signup-email">Email:</label>
        <input class="form-input" type="text" id="signup-email" />
      </div>
      <div class="form-group">
        <label for="signup-password">Password:</label>
        <input class="form-input" type="password" id="signup-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>